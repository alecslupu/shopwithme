        <li class="span4">
          <% unless @product.aw_image_url.blank? %>
            <%= link_to(image_tag(@product.aw_image_url, {
        :alt => raw(@product.name),
        :title => raw(@product.name),
      }), @product.merchant_image_url, {
        :class => "thumbnail", 
        :title => raw(@product.name),
        :"data-fancybox-group" => "group1"
      } )%>  
          <% end %>
          
        </li>
      </ul> 
    </div>

    <div class="span8">
      <ul class="social pull-right">
        <li>
          <div class="fb-like" data-send="true"  data-href="<%=product_url(@product)%>" data-layout="button_count" data-show-faces="false"></div>
          <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
        </li>
        <li>
          <a href="https://twitter.com/share" class="twitter-share-button" data-url="<%=product_url(@product)%>" 
