<% content_for(:page_title) { "#{@product.name} by #{@product.advertiser}" } %>
<% content_for(:page_description) { "View #{@product.name}"} %>
<div class="main_content detail-product" itemscope itemtype="http://schema.org/Product">           
  <h3 class="title"><%= raw(@product.name)%></h3>      
  <div class="row-fluid">
    <div class="span4">
      <% unless @product.aw_image_url.blank? %>

      <%= link_to(image_tag(@product.aw_image_url, {
        :alt => raw(@product.name),
        :title => raw(@product.name),
        :itemprop => "image",
      }), @product.merchant_image_url, {
        :class => "thumbnail", 
        :title => raw(@product.name),
        :itemprop=>product_path(@product), 
        :"data-fancybox-group" => "group1"
      } )%>
      <% end %>
